<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txt_mail_login"
        android:layout_width="0dp"
        android:hint="EMailinizi Giriniz"
        android:layout_height="50dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="69dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/txt_şifre_unuttum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_password_login"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="83dp"
        android:ems="10"
        android:hint="Şifrenizi Giriniz"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/btn_giriş"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_şifre_unuttum" />

    <Button
        android:id="@+id/btn_giriş"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="Giriş Yap"
        app:layout_constraintBottom_toTopOf="@+id/txt_hesap_oluştur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_password_login" />

    <TextView
        android:id="@+id/txt_hesap_oluştur"
        android:layout_width="191dp"
        android:layout_height="0dp"
        android:layout_marginBottom="189dp"
        android:text="Hesap Oluşturmak İstiyorum"
        android:textColor="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_giriş" />

    <TextView
        android:id="@+id/txt_şifre_unuttum"
        android:layout_width="191dp"
        android:layout_height="0dp"
        android:gravity="end"
        android:text="Şifremi Unuttum"
        android:textColor="#2196F3"
        app:layout_constraintBottom_toTopOf="@+id/txt_password_login"
        app:layout_constraintEnd_toEndOf="@+id/txt_password_login"
        app:layout_constraintTop_toBottomOf="@+id/txt_mail_login" />
</androidx.constraintlayout.widget.ConstraintLayout>